<!-- app/Resources/views/base.html.twig -->
<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html" ; charset="utf-8" />
    <title>{% block title %}symblog{% endblock %} - test blog</title>
    <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
    {% block stylesheets %}
    <link href='http://fonts.googleapis.com/css?family=Irish+Grover' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=La+Belle+Aurore' rel='stylesheet' type='text/css'>
    <link href="{{ asset('bundles/blog/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('bundles/blog/css/style.css') }}" type="text/css" rel="stylesheet" />
    {% endblock %}
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
</head>

<body>
    {% block navigation %}
    <nav class="navbar navbar-inverse navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Blog Symfony2</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('BlogBundle_homepage') }}">Accueil</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Catégories <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Catégorie 1</a></li>
                            <li><a href="#">Catégorie 2</a></li>
                            <li><a href="#">Catégorie 3</a></li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav menu">
                    <li id="recherche">{% render(controller('BlogBundle:Article:recherche')) %}</li>
                    <li>
                        {% if app.user is not null %}
                            <a href="{{ path('BlogBundle_profile') }}"> {{ app.user.username}}</a>
                        {% endif %}
                    </li>
                    <li>
                        {% if app.user is not null %}
                           <a href="{{ path('BlogBundle_logout') }}">Déconnexion</a>
                        {% else %}
                            <a href="{{ path('BlogBundle_inscrption') }}">Inscription</a>
                        {% endif %}
                    </li>
                    <li>
                        {% if app.user is null %}
                            <a href="{{ path('BlogBundle_login') }}">Connexion</a>
                        {% endif%}
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    {% endblock %}

    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                {% block body %}{% endblock %}
                {% block blog_tagline %}{% endblock %}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                {% block sidebar %}{% endblock %}
            </div>
        </div>
<br/>
        </br>
        {% block footer %}
        <footer id="footer">
            Blog Symfony2 - Copyright by Alex, Romain, Zak et Sidney
        </footer>
        {% endblock %}
    </div>

    {% block javascripts %}
        <script src="{{ asset('bundles/blog/js/jquery.min.js') }}"></script>
        <script src="{{ asset('bundles/blog/js/bootstrap.min.js') }}"></script>
    {% endblock %}
</body>

</html>